{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "build": "npm run build:clean && lerna run build",
    "build:clean": "lerna exec --no-bail -- rimraf dist/**",
    "deploy": "lerna run deploy",
    "lerna:bootstrap": "npm install && npm run build",
    "lerna:clean": "npm run build:clean && lerna clean --yes",
    "lint": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint:fix",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "test": "lerna run --parallel test"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "husky": "9.0.11",
    "lerna": "8.1.2",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "typescript": "5.4.3"
  },
  "overrides": {
    "typescript": "$typescript"
  },
  "lint-staged": {
    "./packages/**/*.{ts,tsx}": [
      "eslint --fix --quiet --max-warnings 1",
      "prettier --write"
    ],
    "*.{scss,css,html,md}": [
      "prettier --write"
    ]
  }
}
